#include <stdio.h>
int main() {
    int n, rev=0, digit;
    printf("Enter a number: ");
    scanf("%d", &n);

    int temp = n;
    while(temp > 0) {
        rev = rev * 10 + temp % 10;  // reverse number first
        temp /= 10;
    }

    while(rev > 0) {
        digit = rev % 10;
        printf("%d ", digit);
        rev /= 10;
    }
    return 0;
}
